@model IMSMIS.Models.User
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css">
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Solway:wght@400;700&display=swap" />
	<link rel="stylesheet" href="~/css/Login.css">
</head>
<body>

	<div class="container d-flex justify-content-center align-items-center vh-100">

		<div class="row min-vh-100 min-vw-100  left-box-img right-rounded">

			<div class="col-md-6 left-box" style="display:list-item; align-items:center; justify-content:center;">

				<p style="position:absolute;font-size:40px;margin-top: 180px;margin-left: 350px;"><strong>Welcome To IMS-MIS</strong></p>

				<video width="800" height="600" autoplay loop muted style="margin-left: 180px;margin-top: 194px;">
					<source src="~/video/intro.mp4" type="video/mp4" />
				</video>


			</div>
			<div class="col-sm-12 col-md-6 d-flex justify-content-center align-items-center">
				<div class="row box-area right-box text-center" style="background-color: rgb(255, 255, 255); padding: 15px;">

					<div class="login-form">
						<img src="~/Images/CP1.png" style="width:70%; margin-bottom:40px;" />
						<p style="font-size:40px;"><strong>Welcome back!</strong></p>
						<p style="margin-top: -20px;">Please Enter Your Login Details</p>
						@if (ViewBag.ShowIncorrectCredentialsLabel != null && ViewBag.ShowIncorrectCredentialsLabel)
						{
							<label class="Incorrectpswd" style="position:relative;font-size:20px;color:red">**Invalid Credentials</label>
						}
						<hr style="margin-bottom:40px;" />

						<form method="post" asp-controller="Auth" asp-action="Login">
							<div class="floating-label-group">
								<input type="text" id="usermail" asp-for="EmailId" class="form-control" autocomplete="off" autofocus required />
								<label class="floating-label"><strong>Email</strong></label>
							</div>

							<div class="floating-label-group">
								<input type="password" id="password" asp-for="Password" class="form-control" autocomplete="off" required />
								<label class="floating-label"><strong>Password</strong></label>
							</div>
							<div class="input-group">
								<button class="btn btn-primary" type="submit">Login</button>
							</div>
						</form>
					</div>

				</div>
			</div>

		</div>

	</div>


</body>
</html>