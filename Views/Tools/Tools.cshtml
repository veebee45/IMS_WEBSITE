@using System.Data
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Dashboard</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css">
	<link rel="stylesheet" href="~/css/Tools.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>

	<div class="cont">
		<div class="row">

			@{
				var count = 0;
			}

			@foreach (DataRow row in Model.Rows)
			{
				count++;

				if(count==1)
				{
					<div class="col-md-4" style="width:500px;margin-left:50px">
						<div class="card" style="margin-bottom:20px">
							<div class="card-head">@row["ProjectName"]</div>
							<div class="card-body row">
								<div class="img-container col-12" style="text-align: center;">
									<img src="~/Images/@row["ProjectImg"]" style="height: 180px; width:70%; border:1px solid rgb(20, 20, 20); border-radius:10px;">
								</div>
							</div>
							<div class="card-footer d-flex justify-content-center">
								<a href="ToolsView?ProjectName=@row["ProjectName"]" class="btn btn-primary">Proceed</a>
							</div>
						</div>
					</div>
				}
				else if (count % 4 == 0)
				{
					<div class="col-md-4" style="width:500px;margin-left:50px">
						<div class="card" style="margin-bottom:20px">
							<div class="card-head">@row["ProjectName"]</div>
							<div class="card-body row">
								<div class="img-container col-12" style="text-align: center;">
									<img src="~/Images/@row["ProjectImg"]" style="height: 180px; width:70%; border:1px solid rgb(20, 20, 20); border-radius:10px;">
								</div>
							</div>
							<div class="card-footer d-flex justify-content-center">
								<a href="ToolsView?ProjectName=@row["ProjectName"]" class="btn btn-primary">Proceed</a>
							</div>
						</div>
					</div>

					count = 1;
				}
				else
				{
					<div class="col-md-4" style="width:500px">
						<div class="card" style="margin-bottom:20px">
							<div class="card-head">@row["ProjectName"]</div>
							<div class="card-body row">
								<div class="img-container col-12" style="text-align: center;">
									<img src="~/Images/@row["ProjectImg"]" style="height: 180px; width:70%; border:1px solid rgb(20, 20, 20); border-radius:10px;">
								</div>
							</div>
							<div class="card-footer d-flex justify-content-center">
								<a href="ToolsView?ProjectName=@row["ProjectName"]" class="btn btn-primary">Proceed</a>
							</div>
						</div>
					</div>
				}
				
			}

		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

</body>
</html>
